# Environment variables for local development
# Copy this file to .env and update the values

# Project Configuration
PROJECT_NAME=mlops-clinical-trials
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://clinical_user:clinical_password@localhost:5432/clinical_trials
POSTGRES_DB=clinical_trials
POSTGRES_USER=clinical_user
POSTGRES_PASSWORD=clinical_password

# Redis Configuration
REDIS_URL=redis://:redis_password@localhost:6379

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_DEFAULT_ARTIFACT_ROOT=s3://mlflow-artifacts/

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=clinical-trials

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Model Configuration
MODEL_REGISTRY_URI=sqlite:///mlflow.db
EXPERIMENT_NAME=clinical-trials

# Training Configuration
BATCH_SIZE=32
LEARNING_RATE=0.001
EPOCHS=100
EARLY_STOPPING_PATIENCE=10

# Validation Configuration
VALIDATION_SPLIT=0.2
TEST_SPLIT=0.2
CV_FOLDS=5

# A/B Testing Configuration
AB_TEST_TRAFFIC_SPLIT=0.1
AB_TEST_DURATION_HOURS=24
AB_TEST_MIN_SAMPLES=1000

# Monitoring Configuration
PROMETHEUS_GATEWAY=localhost:9091
GRAFANA_URL=http://localhost:3000

# Kubernetes Configuration
K8S_NAMESPACE=clinical-trials
ISTIO_ENABLED=true

# Feature Flags
ENABLE_DATA_DRIFT_DETECTION=true
ENABLE_MODEL_EXPLAINABILITY=true
ENABLE_BIAS_DETECTION=true
ENABLE_PERFORMANCE_MONITORING=true

# AWS Configuration (for production)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-west-2

# Slack Configuration (for alerts)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
